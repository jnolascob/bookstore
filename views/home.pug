doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')
    title Shop Homepage - Start Bootstrap Template
    // Bootstrap core CSS
    link(href='css/bootstrap.min.css', rel='stylesheet')
    // Custom styles for this template
    link(href='css/shop-homepage.css', rel='stylesheet')
  body
    // Navigation
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
      .container
        a.navbar-brand(href='#') Inspired bookstore
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarResponsive.collapse.navbar-collapse
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link(href='/logout') Salir
    // Page Content
    .container
      .row
        .col-lg-3
          h1.my-4 Shop Name
          .list-group
            a.list-group-item(href='#') Category 1
            a.list-group-item(href='#') Category 2
            a.list-group-item(href='#') Category 3
        // /.col-lg-3
        .col-lg-9
          #carouselExampleIndicators.carousel.slide.my-4(data-ride='carousel')
            ol.carousel-indicators
              li.active(data-target='#carouselExampleIndicators', data-slide-to='0')
              li(data-target='#carouselExampleIndicators', data-slide-to='1')
              li(data-target='#carouselExampleIndicators', data-slide-to='2')
            .carousel-inner(role='listbox')
              .carousel-item.active
                img.d-block.img-fluid(src='http://placehold.it/900x350', alt='First slide')
              .carousel-item
                img.d-block.img-fluid(src='http://placehold.it/900x350', alt='Second slide')
              .carousel-item
                img.d-block.img-fluid(src='http://placehold.it/900x350', alt='Third slide')
            a.carousel-control-prev(href='#carouselExampleIndicators', role='button', data-slide='prev')
              span.carousel-control-prev-icon(aria-hidden='true')
              span.sr-only Previous
            a.carousel-control-next(href='#carouselExampleIndicators', role='button', data-slide='next')
              span.carousel-control-next-icon(aria-hidden='true')
              span.sr-only Next
          .row
            each book in book_list
              .col-lg-4.col-md-6.mb-4
                .card.h-100
                  a(href='#')
                    img.card-img-top(src='http://placehold.it/700x400', alt='')
                  .card-body
                    h4.card-title
                      a(href=book.url)=book.title
                    h5 $24.99
                    p.card-text=book.summary
                  .card-footer
                    small.text-muted ★ ★ ★ ★ ☆
            
          // /.row
        // /.col-lg-9
      // /.row
    // /.container
    // Footer
    footer.py-5.bg-dark
      .container
        p.m-0.text-center.text-white Copyright © Your Website 2017
      // /.container
    // Bootstrap core JavaScript
    script(src='js/jquery.min.js')
    script(src='js/bootstrap.min.js')
